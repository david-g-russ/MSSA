<Window x:Class="WPFTest.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title="Window1" Height="1080" Width="1920">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="BlockStylez">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="Crimson"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Button" x:Key="btnStyle">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <TextBlock Text="Sample Text" Style="{StaticResource BlockStylez}" Width="300"/>
        <Button Margin="100" x:Name="btnTest" Style="{StaticResource btnStyle}" Content="Add Record" Width="100"/>
    </StackPanel>
</Window>
