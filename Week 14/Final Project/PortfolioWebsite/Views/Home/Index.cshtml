                                    <span class="wrap-icon icon-link2"></span>
                                    <div class="portfolio-item-content">
                                        <h3>@Html.DisplayFor(modelitem=>project.Name)</h3>
                                        <p>@langs</p>
                                    </div>
                                </div>
                                <img src="~/images/@project.ImageName1" class="lazyload  img-fluid" alt="@project.Name" />
                            </a>
                        </div>
                    }

