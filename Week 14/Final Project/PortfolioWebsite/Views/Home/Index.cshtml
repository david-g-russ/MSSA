            <div id="posts" class="row gutter-isotope-item">
                @foreach(var project in Model.Projects)
                {
                    string langfilter = "";
                    string langs = "";
                    if (project.HasAsp)
                    { langfilter+="asp "; langs += "ASP.NET "; }
                    if (project.HasCs)
                    { langfilter += "csharp "; langs += "C# "; }
                    if (project.HasCss)
                    { langfilter += "css "; langs += "CSS3 "; }
                    if (project.HasHtml)
                    { langfilter += "html "; langs += "HTML5 "; }
                    if (project.HasJs)
                    { langfilter += "js "; langs += "JavaScript "; }
                    if (project.HasSql)
                    { langfilter += "sql "; langs += "SQL "; }

                    if (project.PortfolioType == PortfolioType.Full)
                    {
                        <div class="item @langfilter col-sm-6 col-md-6 col-lg-4 isotope-mb-2">
                            <a href="/Project/Single/@project.Id" class="portfolio-item ajax-load-page isotope-item gsap-reveal-img" data-id="@project.Id">
