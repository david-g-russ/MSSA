@model PortfolioWebsite.Models.Project
@{
    ViewData["Title"] = "Single";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Single</h1>

<div class="container">
        <div class="portfolio-single-wrap unslate_co--section" id="portfolio-single-section">

          <div class="portfolio-single-inner">
            <h2 class="heading-portfolio-single-h2">@Html.DisplayFor(model=>model.Name)</h2>

            <div class="row justify-content-between mb-5">
              <div class="col-12 mb-4">
                <div class="owl-carousel single-slider">
                  <figure class="mb-4">
                    <img src="~/images/@Model.ImageName1" alt="@Model.ImageName1" class="img-fluid">
                  </figure>
                  @if (@Model.ImageName2 != null)
                  {
                      <figure class="mb-4">
                          <img src="~/images/@Model.ImageName2" alt="@Model.ImageName2" class="img-fluid">
                      </figure>
                  }
                  @if (@Model.ImageName3 != null)
                  {
                      <figure class="mb-4">
                          <img src="~/images/@Model.ImageName3" alt="@Model.ImageName3" class="img-fluid">
                      </figure>
                  }
                </div>
              </div>
              <div class="col-12 mb-5">
                <div class="row">
                  <div class="col-sm-6 col-md-6 col-lg-3">
                    <div class="detail-v1">
                      <span class="detail-label">@Html.DisplayNameFor(model=>model.ProjectDate)</span>
                      <span class="detail-val">@Html.DisplayFor(model=>model.ProjectDate)</span>
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6 col-lg-3">
                    <div class="detail-v1">
                      <span class="detail-label">Language</span>
                      @{
                        string langs = "";

                        if (Model.HasAsp)
                        { langs+="ASP.NET";}

                        if (Model.HasCs)
                        { langs += " C#"; }

                        if (Model.HasCss)
                        { langs += " CSS3"; }

                        if (Model.HasHtml)
                        { langs += " HTML5"; }

                        if (Model.HasJs)
                        { langs += " JavaScript"; }

                        if (Model.HasSql)
                        { langs += " SQL"; }
                      }
                      <span class="detail-val">@langs</span>
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6 col-lg-3">
                    <div class="detail-v1">
                      <span class="detail-label">@Html.DisplayNameFor(model=>model.UserInterface)</span>
                      <span class="detail-val">@Html.DisplayFor(model=>model.UserInterface)</span>
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6 col-lg-3">
                    <div class="detail-v1">
                      <span class="detail-label">@Html.DisplayNameFor(model=>model.GitHubUrl)</span>
                      <span class="detail-val"><a href="@Model.GitHubUrl">Click to see code</a></span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-12 pr-md-5 wrapz">
                  @Html.Raw(Model.Description)
              </div>
            </div>

        </div>
    </div>
</div>